{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "target": "ES2020"
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "node_modules"]
}
