{
  "name": "osw/home",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/osw/home/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@thalesrc/nx-utils:run-parallel",
      "options": {
        "commands": [
          {"command": "nx run osw/home:build/tailwind-config -- --watch", "readyWhen": "Sass is watching for changes"},
          "nx run osw/home:serve/app"
        ]
      }
    },
    "serve/app": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "osw/home:build/app",
        "host": "0.0.0.0",
        "publicHost": "https://home.open-source.thalesrc.local",
        "port": 4201
      },
      "configurations": {
        "development": {
          "buildTarget": "osw/home:build/app:development"
        },
        "production": {
          "buildTarget": "osw/home:build/app:production"
        }
      }
    },
    "build": {
      "dependsOn": ["osw/home:build/tailwind-config", "osw/home:build/app"]
    },
    "build/app": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/osw/home",
        "baseHref": "/",
        "main": "apps/osw/home/src/main.tsx",
        "tsConfig": "apps/osw/home/tsconfig.app.json",
        "assets": ["apps/osw/home/src/assets"],
        "postcssConfig": "apps/osw/home/postcss.config.cjs",
        "webpackConfig": "apps/osw/home/webpack.config.ts"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "build/tailwind-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass apps/osw/styles/tailwind.config.scss apps/osw/home/src/styles/tailwind.config.css"
      }
    }
  }
}
