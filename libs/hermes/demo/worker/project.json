{
  "name": "hermes/demo/worker",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hermes/demo/worker",
  "projectType": "application",
  "tags": ["type:demo", "scope:hermes"],
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "hermes/demo/worker:build"
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "buildTarget": "hermes/demo/worker:build:development",
          "hmr": true
        }
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/hermes/demo/worker",
        "configFile": "libs/hermes/demo/worker/vite.config.ts"
      },
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "hermes/demo/worker:build",
        "port": 4300
      },
      "defaultConfiguration": "development"
    }
  }
}
