{
  "name": "hermes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hermes/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@thalesrc/nx-utils:ts-builder",
      "options": {
        "tsConfigPath": "libs/hermes/tsconfig.lib.json",
        "outputPath": "dist/libs/hermes"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx test:unit hermes",
          "pnpm nx test:browser hermes"
        ],
        "parallel": true
      },
      "dependsOn": ["install-playwright-browsers"]
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/hermes/unit"
      }
    },
    "test:browser": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.browser.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/hermes/browser"
      },
      "dependsOn": ["install-playwright-browsers"]
    },
    "test:browser:headed": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.browser.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/hermes/browser"
      },
      "dependsOn": ["install-playwright-browsers"],
      "env": {
        "HEADLESS": "false"
      }
    },
    "test:chrome": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.chrome.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/hermes/chrome"
      },
      "dependsOn": ["install-playwright-browsers"]
    },
    "test:node": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.node.config.ts",
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/hermes/node"
      }
    },
    "test:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx test:unit hermes",
          "pnpm nx test:browser hermes",
          "pnpm nx test:chrome hermes",
          "pnpm nx test:node hermes"
        ],
        "parallel": true
      },
      "dependsOn": ["install-playwright-browsers"]
    },
    "install-playwright-browsers": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec playwright install chromium",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "outputs": []
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:publish/prepare",
          "nx run hermes:publish/to-npm"
        ],
        "parallel": false
      }
    },
    "publish/prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:build",
          "nx run hermes:publish/prepare/copy",
          "nx run hermes:publish/prepare/fill-package-json --packageVersion=$PACKAGE_VERSION"
        ]
      }
    },
    "publish/prepare/copy": {
      "executor": "@thalesrc/nx-utils:copy",
      "options": {
        "input": ["libs/hermes/README.md", "libs/hermes/LICENSE"],
        "output": "dist/libs/hermes"
      }
    },
    "publish/prepare/fill-package-json": {
      "executor": "@thalesrc/nx-utils:fill-package-json",
      "options": {
        "outputPath": "dist/libs/hermes",
        "populateExports": {}
      }
    },
    "publish/to-npm": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/libs/hermes"
      }
    }
  }
}
