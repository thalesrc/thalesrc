{
  "name": "hermes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/hermes/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@thalesrc/nx-utils:ts-builder",
      "options": {
        "tsConfigPath": "libs/hermes/tsconfig.lib.json",
        "outputPath": "dist/libs/hermes"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:test/core",
          "nx run hermes:test/worker",
          "nx run hermes:test/chrome",
          "nx run hermes:test/broadcast",
          "nx run hermes:test/iframe"
        ],
        "parallel": true
      },
      "dependsOn": ["test/prepare/browser"],
      "configurations": {
        "with-coverage": {
          "commands": [
            "nx run hermes:test/core:with-coverage",
            "nx run hermes:test/worker:with-coverage",
            "nx run hermes:test/chrome:with-coverage",
            "nx run hermes:test/broadcast:with-coverage",
            "nx run hermes:test/iframe:with-coverage"
          ]
        }
      }
    },
    "test/coverage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:test:with-coverage",
          "node libs/hermes/scripts/merge-coverage.mjs"
        ],
        "parallel": false
      },
      "dependsOn": ["test/prepare/browser"]
    },
    "test/core": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.core.config.ts",
        "passWithNoTests": true,
        "coverage": false
      },
      "configurations": {
        "with-coverage": {
          "coverage": true
        }
      }
    },
    "test/worker": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.worker.config.ts",
        "passWithNoTests": true,
        "coverage": false
      },
      "dependsOn": ["test/prepare/browser"],
      "configurations": {
        "with-coverage": {
          "coverage": true
        }
      }
    },
    "test/chrome": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.chrome.config.ts",
        "passWithNoTests": true,
        "coverage": false
      },
      "dependsOn": ["test/prepare/browser"],
      "configurations": {
        "with-coverage": {
          "coverage": true
        }
      }
    },
    "test/broadcast": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.broadcast.config.ts",
        "passWithNoTests": true,
        "coverage": false
      },
      "dependsOn": ["test/prepare/browser"],
      "configurations": {
        "with-coverage": {
          "coverage": true
        }
      }
    },
    "test/iframe": {
      "executor": "@nx/vite:test",
      "options": {
        "configFile": "libs/hermes/config/vitest.iframe.config.ts",
        "passWithNoTests": true,
        "coverage": false
      },
      "dependsOn": ["test/prepare/browser"],
      "configurations": {
        "with-coverage": {
          "coverage": true
        }
      }
    },

    "test/prepare/browser": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec playwright install chromium",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "outputs": []
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:publish/prepare",
          "nx run hermes:publish/to-npm"
        ],
        "parallel": false
      }
    },
    "publish/prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run hermes:build",
          "nx run hermes:publish/prepare/copy",
          "nx run hermes:publish/prepare/fill-package-json --packageVersion=$PACKAGE_VERSION"
        ]
      }
    },
    "publish/prepare/copy": {
      "executor": "@thalesrc/nx-utils:copy",
      "options": {
        "input": [
          "libs/hermes/README.md",
          "libs/hermes/LICENSE",
          {
            "path": "libs/hermes/docs/images/**/*.svg",
            "output": "dist/libs/hermes/docs/images"
          }
        ],
        "output": "dist/libs/hermes"
      }
    },
    "publish/prepare/fill-package-json": {
      "executor": "@thalesrc/nx-utils:fill-package-json",
      "options": {
        "outputPath": "dist/libs/hermes",
        "populateExports": {}
      }
    },
    "publish/to-npm": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish --access public",
        "cwd": "dist/libs/hermes"
      }
    }
  }
}
