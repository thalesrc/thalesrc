{
  "name": "ng-pack",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ng-pack/src",
  "prefix": "tng",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ng-pack/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ng-pack/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ng-pack/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "publish/prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run ng-pack:publish/prepare/copy",
          "nx run ng-pack:publish/prepare/fill-package-json",
          "nx run ng-pack:publish/prepare/install-deps",
          "nx run ng-pack:publish/prepare/build"
        ],
        "parallel": false
      }
    },
    "publish/prepare/build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm nx run ng-pack:publish/prepare/build/app"],
        "cwd": "libs/ng-pack/.tmp"
      }
    },
    "publish/prepare/build/app": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist"],
      "options": {
        "project": "ng-package.json",
        "tsConfig": "tsconfig.lib.prod.json"
      }
    },
    "publish/prepare/install-deps": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm install"],
        "cwd": "libs/ng-pack/.tmp"
      }
    },
    "publish/prepare/copy": {
      "executor": "@thalesrc/nx-utils:copy",
      "options": {
        "input": [
          "libs/ng-pack/*",
          "tsconfig.base.json",
          {
            "path": "libs/ng-pack/tsconfig.json",
            "replace": {
              "../../tsconfig.base.json": "./tsconfig.base.json"
            }
          }
        ],
        "output": ".tmp/"
      }
    },
    "publish/prepare/fill-package-json": {
      "executor": "@thalesrc/nx-utils:fill-package-json",
      "options": {
        "outputPath": "libs/ng-pack/.tmp",
        "populateExports": false
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "configDir": "libs/ng-pack/.storybook",
        "port": 6007,
        "compodoc": false,
        "tsConfig": "libs/ng-pack/tsconfig.storybook.json",
        "styles": [],
        "stylePreprocessorOptions": {
          "includePaths": []
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "libs/ng-pack/.storybook",
        "outputDir": "dist/storybook/ng-pack",
        "compodoc": false,
        "tsConfig": "libs/ng-pack/tsconfig.storybook.json",
        "styles": [],
        "stylePreprocessorOptions": {
          "includePaths": []
        }
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
